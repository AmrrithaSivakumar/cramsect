doctype html
html
  head
    title Genoverse Instance
    link(rel='stylesheet', type='text/css', href='css/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='css/style.css')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body(onload="loadTracks()")
    include ./alert.jade
    a.fork
      img(src='images/cranfield-logo.jpg', alt='Cranfield University')
    .containerCustom
      .head
        h1 Genoverse Instance
          a.btn.btn-default.pull-right(href='/', style='font-size: 17px; text-shadow: 0 0 0;')
            span.glyphicon.glyphicon-home
            |  Home        
      .wrap
        .panel.panel-default
          .panel-heading(style='background: #5F8CB0;')
            #header
             .row
              #inputs
                .col-md-4
                  label(label-default='', for='project-name') Project Name
                  input#project-name-input.form-control(name='name', value=object.name, type='text')
                .col-md-8
                  label(label-default='', for='project-info') Description
                  input#project-info-input.form-control(name='info', value=object.description, type='text')
             span &nbsp
             .row
              .col-md-3
                label(label-default='', for='genomic-species-select')
                  | Genome 
                  .btn-group
                       button#ensembl-button.btn.btn-xs(onclick='setEnsembl()') e!
                       button#genome-choose-button.btn.btn-xs(onclick='setGenomeChoose()')
                          span.glyphicon.glyphicon-list
                       button#genome-upload-button.btn.btn-xs(onclick='setGenomeUpload()')
                          span.glyphicon.glyphicon-file
                if(object.genome.type === "ensembl")
                    #ensembl
                      select#genomic-species-select.form-control(name='species')
                         each species in listSpecies
                           if(species.id === object.genome.name)
                             option(value=species.id, selected) #{species.display_name}
                           else
                             option(value=species.id) #{species.display_name}
                    #filechoose(style='display:none')
                      select#genomic-files-select.form-control(name='genomes')
                        each genome in listGenomes
                           option(value=genome) #{genome}
                    #upload.input-group(style='display:none')
                              label.input-group-btn
                                 span.btn.btn-primary
                                   | Browse… 
                                   input(type='file', style='display: none;', accept=".js", multiple=false)
                              input.form-control(id='upload-input', type='text', readonly='')
                else
                    #ensembl(style='display:none')
                      select#genomic-species-select.form-control(name='species')
                         each species in listSpecies
                           option(value=species.id) #{species.display_name}
                    #filechoose
                      select#genomic-files-select.form-control(name='genomes')
                        each genome in listGenomes
                         if(genome === object.genome.name)
                           option(value=genome, selected) #{genome}
                         else
                           option(value=genome) #{genome}
                    #upload.input-group(style='display:none')
                              label.input-group-btn
                                 span.btn.btn-primary
                                   | Browse… 
                                   input(type='file', style='display: none;', accept=".js", multiple=false)
                              input.form-control(id='upload-input', type='text', readonly='')
              #inputs
                .col-md-3
                  label(label-default='', for='chromosome-input') Chromosome
                  input#chromosome-input.form-control(name='chromosome', value=object.chr, type='text')
                .col-md-3
                  label(label-default='', for='genomic-start-input') Start
                  input#genomic-start-input.form-control(name='start', value=object.start, type='number', min='1')
                .col-md-3
                  label(label-default='', for='genomic-end-input') End
                  input#genomic-end-input.form-control(name='end', value=object.end, type='number', min='1')
          .panel-body
            .row
              .col-md-6
                .panel.panel-default
                  // Default panel contents
                  .panel-heading
                    h2 Plugins
                  // List group
                  ul#plugins.list-group
                      each plugins in object.plugins
                        li.list-group-item(title=plugins.id)
                          | #{plugins.name}
                          .material-switch.pull-right
                            input(id=plugins.id, name=plugins.name, type='checkbox', checked=plugins.checked)
                            label.label-primary(label-default='', for=plugins.id)
                if(object.genome.type === "ensembl")
                    #ensembl-only-tracks.panel.panel-default
