                        li.list-group-item
                          | Ensembl Genes    
                          .material-switch.pull-right
                            input#gene_id(name='gene', type='checkbox', checked=object.tracks[0].checked)
                            label.label-primary(label-default='', for='gene_id')
                        li.list-group-item
                          | Ensembl Sequence   
                          .material-switch.pull-right
                            input#seq_id(name='seq', type='checkbox', checked=object.tracks[1].checked)
                            label.label-primary(label-default='', for='seq_id')
                        li.list-group-item
                          | SNP database   
                          .material-switch.pull-right
                            input#snp_id(name='snp', type='checkbox', checked=object.tracks[2].checked)
                            label.label-primary(label-default='', for='snp_id')
              .col-md-6
                .panel.panel-default
                  // Default panel contents
                  .panel-heading
                    h2
                      | Tracks
                      // List group
                  ul#tracks.list-group
                    li.list-group-item
                      | Scalebar 
                      .material-switch.pull-right
                        input#scalebar_id(name='scalebar', type='checkbox', checked=object.tracks[3].checked)
                        label.label-primary(label-default='', for='scalebar_id')
                    li.list-group-item
                      | Chromosome 
                      .material-switch.pull-right
                        input#chrom_id(name='chromosome', type='checkbox', checked=object.tracks[4].checked)
                        label.label-primary(label-default='', for='chrom_id')
                    li.list-group-item
                      .material-switch.pull-right
                        input#fasta_id(name='fasta', type='checkbox', checked=object.tracks[5].checked)
                        label.label-primary(label-default='', for='fasta_id')
                      a(data-toggle='collapse', href='#collapseFASTA') FASTA sequence 
                      button.btn.btn-info.btn-xs(type='button', data-toggle='modal', data-target='#fastaModal')
